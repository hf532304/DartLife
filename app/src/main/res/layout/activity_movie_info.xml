<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MovieInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/MovieInfoToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/MovieInfoToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/EditProfileScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.ProfileActivity">


            <ImageView
                android:id="@+id/MoviePoster"
                android:layout_width="112dp"
                android:layout_height="126dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:contentDescription="MoviePoster"
                android:transitionName="profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/MovieInfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:text="TextView"
                android:transitionName="nameYear"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/MoviePoster"
                app:layout_constraintTop_toTopOf="parent" />

            <RatingBar
                android:id="@+id/MovieInfoScoreRating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:numStars="5"
                android:stepSize="0.1"
                app:layout_constraintStart_toEndOf="@+id/MoviePoster"
                app:layout_constraintTop_toBottomOf="@+id/MovieInfoTitle" />

            <TextView
                android:id="@+id/MovieInfoInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:transitionName="information"
                app:layout_constraintStart_toEndOf="@+id/MoviePoster"
                app:layout_constraintTop_toBottomOf="@+id/MovieInfoScoreRating" />

            <TextView
                android:id="@+id/MovieScoreNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/MovieInfoScoreRating"
                app:layout_constraintTop_toBottomOf="@+id/MovieInfoTitle" />

            <TextView
                android:id="@+id/MovieDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/MoviePoster" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>