<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="@color/colorBack"
    android:layout_margin="5dp"
    android:transitionName="activity">

<android.support.constraint.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/MoviePic"
            android:layout_width="100dp"
            android:layout_height="129dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:transitionName="profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/MovieNameYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#616264"
            android:textStyle="bold"
            android:transitionName="nameYear"
            app:layout_constraintStart_toEndOf="@+id/MoviePic"
            app:layout_constraintTop_toTopOf="parent" />


        <RatingBar
            android:id="@+id/MovieFragmentScoreRating"
            style="?android:attr/ratingBarStyleSmall"
            android:stepSize="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:transitionName="rating"
            app:layout_constraintStart_toEndOf="@+id/MoviePic"
            app:layout_constraintTop_toBottomOf="@+id/MovieNameYear" />


        <TextView
            android:id="@+id/MovieScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#616264"
            android:transitionName="score"
            app:layout_constraintStart_toEndOf="@+id/MovieFragmentScoreRating"
            app:layout_constraintTop_toBottomOf="@+id/MovieNameYear" />

        <TextView
            android:id="@+id/MovieInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="gravity"
            android:textColor="#616264"
            android:transitionName="information"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/MoviePic"
            app:layout_constraintTop_toBottomOf="@+id/MovieScore" />


</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
