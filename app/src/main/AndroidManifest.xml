<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dartlife">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.WelcomeActivity"
            android:theme="@style/WelcomeScreenTheme"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.EditProfileActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.EntertainmentActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.EntertainmentInfoActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name=".activity.SignupActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.FoodDetailActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.MovieInfoActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.FreeFoodActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity"
            android:screenOrientation="portrait"/>

        <service android:name=".service.TrackService" />

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.LoginActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC1YSrvJV9qt_GUckAEozm_UuzhkXczxec" />
    </application>

</manifest>